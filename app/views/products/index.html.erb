<p id="notice"><%= notice %></p>


<h1>Listing products</h1>
<table>
  <% @products.each do |products| %>
    <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">

      <td>
         <dt class="list_image"><%= image_tag(products.image_url, class: 'list_image') %></dt>
      </td>
      <td class="list_description">
        <dl>
          <dt><%= products.title %></dt>
          <dd><%= truncate(strip_tags(products.description),
                           length: 80) %></dd>
        </dl>
      </td>
      <td class="list_actions">
        <%= link_to 'Show', products %><br/>
        <%= link_to 'Edit', edit_product_path(products) %><br/>
        <%= link_to 'Destroy', products, method: :delete,
                    data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
  <%end%>
</table>



